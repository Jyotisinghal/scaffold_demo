
<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th colspan="3">Name</th>
      <th colspan="3">Address</th>
      <th colspan="3">Email</th>
      <th colspan="3">Payment_type</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order_detail| %>
      <tr>
        <td colspan="3"><%= order_detail.name %></td>
        <td colspan="3"><%= order_detail.address %></td>
        <td colspan="3"><%= order_detail.email %></td>
        <td colspan="3"><%= order_detail.pay_type %></td>
        <td colspan="3"><%= link_to 'Destroy', orders_path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

